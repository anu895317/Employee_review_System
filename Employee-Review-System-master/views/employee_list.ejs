<link rel="stylesheet" href="/css/employeeList.css">

<main>
  <div class= "heading">
    <h1 class="text-center mt-3">All Employees List</h1>
  </div>
  <div class="container mt-4">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">S.No.</th>
          <th class = 'L-border' scope="col">Name</th>
          <th class = 'L-border' scope="col">Email</th>
          <th class = 'L-border'  scope="col">Admin</th>
          <%if(locals.user.isAdmin){%>
            <th class = 'L-border' scope="col">Delete</th>
          <%}%>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < employees.length; i++) {%>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td class = 'L-border'> <%= employees[i].name%> </td>
            <td class = 'L-border'> <%= employees[i].email%> </td>
            <td class = 'L-border'> <%= employees[i].isAdmin%> </td>
            <% if((locals.user.id != employees[i]._id) && (locals.user.isAdmin)) {%>
              <td class = 'L-border'> 
                <a href="/admin/deleteEmployee/<%=employees[i]._id %>" class="btn btn-md">Delete</a>
              </td>
            <%}else {%>
              <td class = 'L-border'> 
              </td>
            <%}%>
          </tr>  
        <%}%>
              
     </tbody>
    </table>
  </div>
</main>
      